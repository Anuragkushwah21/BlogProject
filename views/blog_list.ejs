<section class="featured-blog mtb-40">
  <div class="container">
    <div class="row">
      <% b.forEach((item)=>{%>
      <div class="col-md-4">
        <div class="blog-box">
          <img src="<%=item.image.url%>" height="300px" width="150px" alt="blog1" />
          <h3><%=item.title%></h3>
          <p>
            by <span>RSGiTECH</span> on
            <span><%=item.createdAt.toLocaleDateString()%>"</span>
          </p>
          <p><%=item.description.slice(0,100)%></p>
          <a href="/detail/<%=item._id%>" class="btn btn-danger"
            >Read more...</a
          >
        </div>
      </div>
      <%})%>
    </div>
  </div>
</section>

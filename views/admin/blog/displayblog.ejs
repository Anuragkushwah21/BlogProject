<%- include('../../header.ejs')%>
<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-3">
          <div class="dash-left">
            <ul>
              <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
              <li><a href="#" class="active">Blogs</a></li>
              <li><a href="#">Categories</a></li>
              <li><a href="#">Pages</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1>Blogs</h1>
              </div>
              <a href="/blog_form"><button
                type="button"
                class="btn btn-primary"
              >Add Blog
              </button></a>
          </div>

          <table class="table table-bordered table-striped">
            <tr>
              <th>#ID</th>
              <th>Title</th>
              <th>Discription</th>
              <th>Image</th>
              <th>Action</th>
            </tr>
            <% d.forEach((item)=>{ %>
            <tr>
              <td><%= item._id %></td>
              <td><%= item.title %></td>
              <td><%= item.description.slice(0,100) %></td>
              <td><img src="<%= item.image.url %>" width="50px" alt="" /></td>

              <td>
                <a
                  href="/blogview/<%= item.id %>"
                  class="btn btn-primary btn-sm"
                  ><i class="fa-solid fa-eye"></i></a
                >
                <a href="/blogedit/<%= item.id %>" class="btn btn-info btn-sm"
                  ><i class="fa-solid fa-pen-to-square"></i></a
                >
                <a
                  href="/blogdelete/<%= item.id %>"
                  class="btn btn-danger btn-sm"
                  ><i class="fa-solid fa-trash"></i></a
                >
              </td>
            </tr>
            <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../../footer.ejs')%>